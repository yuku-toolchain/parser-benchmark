{
  "name": "ecmascript-native-parser-benchmark",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build:yuku && bun build:oxc",
    "build:yuku": "cd yuku && zig build --release=fast && cp ./zig-out/bin/yuku ../bin",
    "build:oxc": "cd oxc && cargo build --release && cp ./target/release/oxc ../bin",
    "bench:file-typescript": "hyperfine './bin/yuku files/typescript.js' './bin/oxc files/typescript.js' --export-markdown result-file-typescript.md",
    "bench:1000": "hyperfine './bin/yuku apps/1000' './bin/oxc apps/1000' --export-markdown result-1000.md"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
