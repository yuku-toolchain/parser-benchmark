{
  "name": "ecmascript-native-parser-benchmark",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build:zig && bun build:rust",
    "build:zig": "cd zig && zig build --release=fast && cp ./zig-out/bin/yuku ../bin",
    "build:rust": "cd rust && cargo build --release && cp ./target/release/oxc ../bin",
    "bench": "bun run build && bun bench:typescript && bun bench:three && bun bench:antd",
    "bench:typescript": "hyperfine --warmup 100 './bin/yuku files/typescript.js' './bin/oxc files/typescript.js' --export-markdown result/typescript.md",
    "bench:three": "hyperfine --warmup 100 './bin/yuku files/three.js' './bin/oxc files/three.js' --export-markdown result/three.md",
    "bench:antd": "hyperfine --warmup 100 './bin/yuku files/antd.js' './bin/oxc files/antd.js' --export-markdown result/antd.md"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
